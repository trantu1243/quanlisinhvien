<%- include('../components/header/table-header') %>

<div class="wrapper">
  
<%- include('../components/sidebar/sidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Môn Học</h1>
            </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">Edit</h3>
                        </div>
                       
                        <form action=<%= `/monhoc/edit/${monhoc._id}` %> method="POST">
                            
                            <div class="card-body">
                                <% if (error) { %>
                                    <div class="alert alert-danger"><%= error %></div>
                                <% } %>
                                <% if (success) { %>
                                    <div class="alert alert-success"><%= success %></div>
                                <% } %>
                                <div class="form-group">
                                    <label for="maMh">Mã môn học</label>
                                    <input name="maMH" type="text" value="<%= monhoc.maMH %>" class="form-control" id="maMh" placeholder="Nhập mã môn học" autocomplete="none">
                                </div>

                                <div class="form-group">
                                    <label for="tenMH">Tên môn học</label>
                                    <input name="tenMH" type="text" value="<%= monhoc.tenMH %>" class="form-control" id="tenMH" placeholder="Nhập tên môn học" autocomplete="none">
                                </div>

                                <div class="form-group">
                                    <label for="sotinchi">Số tín chỉ</label>
                                    <input name="sotinchi" type="number" value=<%= monhoc.sotinchi %> class="form-control" id="sotinchi" autocomplete="none">
                                </div>
                            </div>
    
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                      </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!--/. container-fluid -->
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
      <b>Version</b> 3.2.0
    </div>
    <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<%- include('../components/footer/table-footer') %>

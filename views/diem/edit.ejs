<%- include('../components/header/table-header') %>

<div class="wrapper">
  
    <%- include('../components/sidebar/sidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Điểm</h1>
          </div>
         
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">Add</h3>
                        </div>
                       
                        <form action=<%= `/diem/edit/${diem._id}` %> method="POST">
                            
                            <div class="card-body">
                                <% if (error) { %>
                                    <div class="alert alert-danger"><%= error %></div>
                                <% } %>
                                <% if (success) { %>
                                    <div class="alert alert-success"><%= success %></div>
                                <% } %>
                                <div class="form-group">
                                    <label for="maSV">Mã sinh viên</label>
                                    <input name="maSV" type="text" value="<%= masv %>" class="form-control" id="maSV" placeholder="Nhập mã sinh viên" autocomplete="none" required>
                                </div>

                                <div class="form-group">
                                    <label for="maMH">Mã môn học</label>
                                    <input name="maMH" type="text" value="<%= mamh %>" class="form-control" id="maMH" placeholder="Nhập mã môn học" autocomplete="none" required>
                                </div>

                                <div class="form-group">
                                    <label for="tp1">Thành phần 1</label>
                                    <input name="tp1" type="number" step="0.1" min="0" max="10" value="<%= diem.tp1 %>" class="form-control" id="tp1" autocomplete="none" required>
                                </div>

                                <div class="form-group">
                                    <label for="tp2">Thành phần 2</label>
                                    <input name="tp2" type="number" step="0.1" min="0" max="10" value="<%= diem.tp2 %>" class="form-control" id="tp2" autocomplete="none" required>
                                </div>

                                <div class="form-group">
                                    <label for="thi">Điểm thi</label>
                                    <input name="thi" type="number" step="0.1" min="0" max="10" value="<%= diem.thi %>" class="form-control" id="thi" autocomplete="none" required>
                                </div>
                            </div>
    
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                      </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!--/. container-fluid -->
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
      <b>Version</b> 3.2.0
    </div>
    <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<%- include('../components/footer/table-footer') %>
